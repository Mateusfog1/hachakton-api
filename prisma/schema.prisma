generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_POSTGRES_PRISMA_URL")
}

enum USER_ROLE {
  UBS
  CIDADAO
}

model USER {
  userId    Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      USER_ROLE @default(CIDADAO)
  createdAt DateTime  @default(now())
}

model Ocorrencia {
  ocorrenciaId     Int      @id @default(autoincrement())
  userId           Int
  UBSId            Int
  descricao        String   @db.Text
  arquivo_registro String
  latitude         Float
  longitude        Float
  createdAt        DateTime @default(now())
}
